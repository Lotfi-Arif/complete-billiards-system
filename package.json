{
  "name": "pool-table-manager",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "license": "MIT",
  "scripts": {
    "dev:main": "tsc -p tsconfig.json",
    "watch:main": "tsc -p tsconfig.json -w",
    "dev": "rimraf dist && yarn dev:main && concurrently \"yarn watch:main\" \"yarn dev:renderer\" \"yarn electron:dev\"",
    "dev:renderer": "vite",
    "electron:dev": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "build": "rimraf dist && yarn build:main && yarn build:renderer",
    "start": "electron .",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "lint": "eslint -c .eslintrc.js './src/**/*.{ts,tsx}'",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "clean": "rimraf dist",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.1",
    "adhan": "^4.4.3",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.8.1",
    "electron-is-dev": "^3.0.1",
    "module-alias": "^2.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.1",
    "serialport": "^13.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@tailwindcss/postcss": "^4.0.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/better-sqlite3": "^7.6.4",
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.13.1",
    "@types/node-fetch": "^2.6.12",
    "@types/play-sound": "^1.1.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/serialport": "^10.2.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "electron-rebuild": "^3.2.0",
    "eslint": "^9.20.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "play-sound": "^1.1.6",
    "postcss": "^8.5.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.0.6",
    "ts-jest": "^29.2.5",
    "typescript": "^5.1.6",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.yourdomain.poolhallmanager",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}
